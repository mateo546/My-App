pipeline {
    agent any
    
    environment {
        KUBECONFIG = "/path/to/deployment.yaml"
    }
    
    stages {
        stage('Deploy') {
            steps {
                withCredentials(bindings: [azureServicePrincipal("Kubernetes-credentials")]) {
                    sh "az aks get-credentials --resource-group futuro grupo de recursos --name nombre de mi cluster"
                    sh "kubectl apply -f deployment.yaml"
                    //Posibles futuros archivos de ingress, testeo(locust) o metricas(prometheus)
                }
            }
        }
    }
    
    post {
        always {
            sh "kubectl rollout status deployment/My-App"
        }
    }
}
